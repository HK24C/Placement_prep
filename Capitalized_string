#include<stdio.h>
#include<string.h>

int main()
{
    int c,i;
    char ch[10];
    printf("enter the string: ");
    gets(ch);
    printf("Enter the position to capitalize: ");
    scanf("%d",&c);

    for(i=0;i<=strlen(ch);i++)
    {
        if(i==c)
            ch[i]=ch[i]-32;
    }
    printf("Capitalized position string : %s ",ch);
    return 0;
}
